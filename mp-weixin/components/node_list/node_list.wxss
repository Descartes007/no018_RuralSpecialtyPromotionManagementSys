.item_wrap {
  display: flex;
  flex-wrap: wrap;
}
.item_wrap .item {
  border: 5rpx solid #f3f8fb;
  width: 50%;
}
.item_wrap .item .item_title {
  font-weight: 700;
  font-size: 28rpx;
  padding: 8rpx;
}
.item_wrap .item image {
  width: 100%;
}
.item_wrap .item .bottom_wrap {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.item_wrap .item .bottom_wrap .user {
  display: flex;
  justify-content: center;
  align-items: center;
}
.item_wrap .item .bottom_wrap .user .user_avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}
.item_wrap .item .bottom_wrap .user .user_avatar image {
  width: 100%;
  height: 100%;
}
.item_wrap .item .bottom_wrap .user .user_name {
  font-size: 24rpx;
  margin-left: 10rpx;
}
.item_wrap .item .bottom_wrap .like {
  display: flex;
  justify-content: center;
  align-items: center;
}
.item_wrap .item .bottom_wrap .like .like_img {
  width: 48rpx;
  height: 48rpx;
}
.item_wrap .item .bottom_wrap .like .like_img image {
  height: 100%;
  width: 100%;
}
