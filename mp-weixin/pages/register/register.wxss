.user_center .form_input_wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.user_center .form_input_wrap .form_input_prop {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 150rpx;
  margin-right: 20rpx;
}
.user_center .form_input_wrap .form_input {
  height: 70rpx;
  border-radius: 10rpx;
  border: 1rpx solid #dcdfe6;
  padding-left: 10rpx;
}
.user_center .form_input_wrap .form_radio {
  width: 354rpx;
}
.user_center .form_input_wrap .form_textarea {
  width: 354rpx;
  border-radius: 10rpx;
  border: 1rpx solid #dcdfe6;
  padding-left: 10rpx;
}
.user_center .form_input_wrap .upload_file {
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user_center .form_input_wrap .upload_file .avatar_image {
  width: 100%;
  height: 100%;
}
.user_center .register_form_submit {
  margin: 100rpx 0;
}
