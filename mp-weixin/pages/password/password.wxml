<view class="forget">
    <view class="forget_main">
        <form bindsubmit="submit">
            <input class="forget_input" always-embed name="oldPassword" type="text" placeholder="旧密码"></input>
            <input class="forget_input" always-embed value="{{password}}" name="password" password="{{true}}" type="password" placeholder="密码"></input>
            <input class="forget_input" always-embed value="{{checkPassword}}" name="checkPassword" password="{{true}}" type="password" placeholder="确认密码"></input>
            <button type="primary" form-type="submit">提交</button>
        </form>
    </view>
</view>