.feedback {
  width: 90%;
  margin: 0 auto;
  margin-bottom: 150rpx;
}
.feedback .feedback_form {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.feedback .feedback_form .feedback_textarea {
  width: 100%;
  padding: 10rpx 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.3);
}
.feedback .feedback_submit_btn {
  margin-top: 50rpx;
  background-color: #cd8062;
}
.feedback .feedback_image_swap {
  display: flex;
  flex-wrap: wrap;
}
.feedback .feedback_image_swap .feedback_upload_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  width: 90rpx;
  height: 90rpx;
  margin: 30rpx 30rpx 50rpx 2rpx;
}
.feedback .feedback_image_swap .feedback_image {
  width: 160rpx;
  height: 210rpx;
  margin: 30rpx 30rpx 50rpx 0;
  position: relative;
}
.feedback .feedback_image_swap .feedback_image image {
  width: 100%;
  height: 100%;
}
.feedback .feedback_image_swap .feedback_image icon {
  position: absolute;
  right: -22rpx;
  top: -22rpx;
}
.feedback .feedback_image_swap .feedback_image_node:nth-child(4n) {
  margin-right: 0;
}
.feedback .feedback_list {
  margin-top: 150rpx;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_feedback_wrap {
  display: flex;
  justify-content: flex-end;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_feedback_wrap .feedback_list_item_feedback {
  display: flex;
  justify-content: flex-end;
  width: 85%;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_feedback_wrap .feedback_list_item_feedback .feedback_list_item_content_wrap {
  width: fit-content;
  padding: 10rpx 20rpx;
  background-color: #cd8062;
  border-radius: 25rpx;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_feedback_wrap .feedback_list_item_feedback .feedback_list_item_content_wrap .feedback_list_item_content {
  font-size: 30rpx;
  word-break: break-word;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_feedback_wrap .feedback_list_item_feedback .feedback_list_item_content_wrap .feedback_list_item_images {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_feedback_wrap .feedback_list_item_feedback .feedback_list_item_content_wrap .feedback_list_item_images .feedback_list_item_image {
  width: 160rpx;
  height: 210rpx;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_feedback_wrap .feedback_list_item_feedback .feedback_list_item_content_wrap .feedback_list_item_images .feedback_list_item_image image {
  width: 100%;
  height: 100%;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_feedback_wrap .feedback_list_item_feedback .feedback_list_item_content_wrap .feedback_list_item_create_time {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 26rpx;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_reply {
  width: 85%;
  margin: 30rpx 0;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_reply .feedback_list_item_reply_content_swap {
  word-break: break-word;
  border-radius: 25rpx;
  background-color: #f2f2f2;
  padding: 10rpx 20rpx;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_reply .feedback_list_item_reply_content_swap .feedback_list_item_reply_content {
  width: fit-content;
  font-size: 30rpx;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_reply .feedback_list_item_reply_content_swap .feedback_list_item_reply_time {
  display: flex;
  justify-content: flex-end;
  font-size: 26rpx;
  margin-top: 20rpx;
  word-break: break-word;
}
.feedback .feedback_list .feedback_list_item .feedback_list_item_reply .feedback_list_item_no_reply {
  width: fit-content;
  font-size: 30rpx;
  border-radius: 25rpx;
  background-color: #e0e1e2;
  padding: 10rpx 20rpx;
}
