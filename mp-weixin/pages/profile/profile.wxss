.profile .avatar_bg {
  margin-bottom: 200rpx;
  height: 180rpx;
  border-radius: 0 0 200rpx 200rpx;
  width: 100%;
  background-color: #cd8062;
  position: relative;
}
.profile .avatar_bg .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 100rpx;
  text-align: center;
}
.profile .avatar_bg .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.profile .avatar_bg .user_info .user_name {
  margin-top: 20rpx;
}
.profile .profile_func_list {
  display: flex;
  flex-wrap: wrap;
}
.profile .profile_func_list .profile_func {
  background-color: #fff;
  padding: 0;
  font-weight: normal;
  font-size: 28rpx;
  width: 25%;
  height: 200rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-right: none;
  border-bottom: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.profile .profile_func_list .profile_func .profile_func_img {
  min-width: 70rpx;
  min-height: 70rpx;
  width: 70rpx;
  height: 70rpx;
}
.profile .profile_func_list .profile_func .profile_func_img image {
  width: 100%;
  height: 100%;
}
.profile .profile_func_list :nth-child(n + 5) {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.profile .profile_func_list_admin .profile_func {
  width: 20%;
  font-size: 26rpx;
}
.profile .tips {
  padding: 0 20rpx;
}
.profile .tips .tips_title {
  margin: 30rpx 0;
  border-left: 10rpx solid #cd8062;
  padding: 10rpx;
}
.profile .tips .tips_column {
  line-height: 42rpx;
  font-size: 26rpx;
  text-align: center;
  color: #666;
}
