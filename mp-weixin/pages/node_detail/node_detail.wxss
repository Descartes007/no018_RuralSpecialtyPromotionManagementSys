.express_img {
  width: 100%;
  height: 100%;
}
.express_img video {
  width: 100%;
  height: 100%;
}
.express_img image {
  width: 100%;
  height: 100%;
}
.goods_list {
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  margin: 0 20rpx;
}
.poem {
  padding: 0 20rpx;
}
.poem .node_status {
  border: 1rpx solid #cd8062;
  color: #cd8062;
  display: inline-block;
  padding: 10rpx 20rpx;
  margin: 30rpx 0;
}
.poem .user {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}
.poem .user .user_img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}
.poem .title {
  font-weight: 700;
}
.poem .create_time {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 50rpx;
}
.poem .content {
  font-size: 30rpx;
  margin: 20rpx 0;
}
.poem .poem_tools {
  padding: 50rpx 0;
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.poem .poem_tools .poem_tools_item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}
.poem .poem_tools .poem_tools_item .poem_tools_img {
  width: 48rpx;
  height: 48rpx;
}
.poem .poem_tools .poem_tools_item .poem_tools_img image {
  width: 100%;
  height: 100%;
}
.poem .poem_icon_wrap {
  margin: 30rpx 0;
  display: flex;
  justify-content: space-around;
}
.poem .poem_icon_wrap .poem_icon_item {
  display: flex;
  align-items: center;
  justify-content: center;
}
.poem .poem_icon_wrap .poem_icon_item .poem_icon_img {
  width: 48rpx;
  height: 48rpx;
}
.poem .poem_icon_wrap .poem_icon_item .poem_icon_img image {
  width: 100%;
  height: 100%;
}
.poem .comment_item {
  display: flex;
}
.poem .comment_item .comment_item_img {
  margin-right: 15rpx;
  min-width: 58rpx;
  min-height: 58rpx;
  border-radius: 50%;
  overflow: hidden;
  width: 58rpx;
  height: 58rpx;
}
.poem .comment_item .comment_item_img image {
  width: 100%;
  height: 100%;
}
.poem .comment_item .comment_item_main {
  border-bottom: 1rpx dotted rgba(0, 0, 0, 0.1);
}
.poem .comment_item .comment_item_main .comment_user {
  color: #576b95;
}
.poem .comment_item .comment_item_main .comment_content {
  margin: 10rpx 0;
  font-size: 26rpx;
}
.poem .comment_item .comment_item_main .comment_time {
  color: #666;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.poem .comment_item_children {
  display: flex;
  margin-left: 50rpx;
}
.poem .comment_item_children .comment_item_img {
  margin-right: 15rpx;
  min-width: 58rpx;
  min-height: 58rpx;
  border-radius: 50%;
  overflow: hidden;
  width: 58rpx;
  height: 58rpx;
}
.poem .comment_item_children .comment_item_img image {
  width: 100%;
  height: 100%;
}
.poem .comment_item_children .comment_item_main {
  border-bottom: 1rpx dotted rgba(0, 0, 0, 0.1);
}
.poem .comment_item_children .comment_item_main .comment_user {
  color: #576b95;
}
.poem .comment_item_children .comment_item_main .comment_content {
  margin: 10rpx 0;
  font-size: 26rpx;
}
.poem .comment_item_children .comment_item_main .comment_time {
  color: #666;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.poem .comment_over {
  text-align: center;
  color: #666;
  padding: 20rpx 0 300rpx 0;
}
.poem .comment_input_wrap {
  background-color: #fff;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  opacity: 0.95;
}
.poem .comment_input_wrap input {
  width: 70%;
  background-color: #f6f6f6;
  height: 80rpx;
  padding: 0 20rpx;
}
.poem .comment_input_wrap button {
  margin: 0;
  width: 25%;
  background-color: #cd8062;
  color: #fff;
  font-weight: normal;
}
