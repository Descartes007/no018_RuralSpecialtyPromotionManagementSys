<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.lrb.dao.UserGoodsDao">
    <resultMap id="userGoodsResultMap" type="com.example.lrb.pojo.UserGoods">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="goods_id" property="goodsId"/>
        <result column="create_time" property="createTime"/>
        <association property="user" javaType="com.example.lrb.pojo.User">
            <result column="u_name" property="name"/>
        </association>
        <association property="goods" javaType="com.example.lrb.pojo.Goods">
            <id property="id" column="g_id"/>
            <result property="title" column="g_title"/>
            <result property="content" column="g_content"/>
            <result property="price" column="g_price"/>
            <result property="images" column="g_images"/>
            <result property="userId" column="g_user_id"/>
            <result property="createTime" column="g_create_time"/>
        </association>
    </resultMap>

    <select id="selectListByPayUserId" resultMap="userGoodsResultMap">
        SELECT
            ug.*,
            g.id g_id,
            g.title g_title,
            g.price g_price,
            g.content g_content,
            g.images g_images,
            g.user_id g_user_id,
            g.create_time g_create_time,
            u.NAME u_name
        FROM
            USER u,
            user_goods ug,
            goods g
        WHERE
            u.id = ug.user_id
            AND g.id = ug.goods_id
            AND u.id = #{id}
    </select>
    <select id="selectListByMerchantId" resultMap="userGoodsResultMap">
        SELECT
            ug.*,
            g.id g_id,
            g.title g_title,
            g.price g_price,
            g.content g_content,
            g.images g_images,
            g.user_id g_user_id,
            g.create_time g_create_time,
            u.NAME u_name
        FROM
            USER u,
            user_goods ug,
            goods g
        WHERE
            u.id = ug.user_id
            AND g.id = ug.goods_id
            AND ug.goods_id in (select id from goods where user_id = #{id})
    </select>
</mapper>