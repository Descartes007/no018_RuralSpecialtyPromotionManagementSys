<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.lrb.dao.UserDao">
    <select id="queryUserAll" resultType="com.example.lrb.pojo.User">
        SELECT
            u.*
        FROM
            USER u
        <where>
            <if test="name != null and name != ''">
                u.name like "%"#{name}"%"
            </if>
        </where>
        GROUP BY
            u.id
        ORDER BY
            u.id DESC
    </select>

</mapper>